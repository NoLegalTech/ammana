    <body id="top">

        <header id="masthead" class="site-header collapsed" role="banner">

        <style>
@font-face{
    font-family:'Helvetica Neue';
    src:url('fonts/fonts/Helvetica-Neue/HelveticaNeue-Medium.otf');
    font-weight:normal;
    font-style:normal
}
        #masthead {
        height: 100px;
        background-color: white;
        border-bottom: 1px solid #c4c9cf;
        }
#masthead ul {
    float: right;
width: auto;
}
            #masthead li {
    display: inline;
    font-size: 24px;
    margin: 0px 5px 0px 5px;
    padding: 30px;
display: inline;
    font-size: 20px;
    margin: 0px 5px 0px 5px;
    padding: 5px;
    color: black;
    line-height: 3.5;
}
            #masthead li a {
color: black;
}
body {
    font-family: 'Helvetica';
}
.custom-header .wrap.main-menu {
    height: 100px;
    padding-top: 0px;
}
.custom-header .wrap.main-menu > a > img {
    margin-top: 35px;
    width: 150px;
}
.custom-header .wrap.main-menu > ul {
    height: 100px;
    padding-top: 20px;
    padding-bottom: 20px;
}
.custom-header .wrap.main-menu > ul.general {
    padding-right: 20px;
    border-right: 1px solid #c4c9cf;
}
.custom-header .wrap.main-menu > ul.user {
    padding-left: 20px;
}
.custom-header .wrap.main-menu > ul.general > li > ul.protocols {
    float: none;
    position: absolute;
}
.custom-header .wrap.main-menu > ul.general > li > ul.protocols li {
    border: 1px solid #c4c9cf;
    display: block;
}

            img.menubar {
                display: none;
            }

            @media (max-width: 480px) {
                #masthead .wrap {
                    margin: 0;
                    padding: 0;
                }
                .custom-header .wrap.main-menu > a > img {
                    margin-left: 20px;
                }
                img.menubar {
                    display: block;
                    float: right;
                    margin-top: 15px;
                    cursor: pointer;
                    margin-bottom: 15px;
                }
                #masthead ul {
                    display: block;
                    width: 100%;
                    margin: 0;
                    padding: 0;
                }
                #masthead.collapsed ul {
                    display: none;
                }
                #masthead li {
                    width: 100%;
                    display: block;
                    padding: 0;
                    margin: 0;
                    border-bottom: 1px solid #c4c9cf;
                    padding-left: 10%;
                    height: 70px;
                }
                #masthead li:hover {
                    background-color: #c4c9cf;
                }
                #masthead li a {
                    font-size: 20px;
                }
                #masthead li:hover a {
                    color: white;
                }
                section#fill-pre-content {
                    height: 550px;
                }
                #masthead.collapsed + section#fill-pre-content {
                    height: 200px;
                }
                #masthead .custom-header .wrap.main-menu > ul.user {
                    height: 70px;
                }
                #masthead .custom-header .wrap.main-menu > ul.general {
                    height: 280px;
                }
                #masthead .custom-header .wrap.main-menu > ul.user.logged {
                    height: 280px;
                }
            }

        </style>

        <div class="custom-header" style="margin-bottom: 0px;">

            <div class="wrap main-menu">

                <a href="{{ path('app') }}">
                    <img src="/web/images/logo.png" width="200" alt="ammana.es">
                </a>

                <img class="menubar" src="/images/menubar.png">

                {% if not app.session.get('user') %}
                    <ul class="user">
                        <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                            <a href="{{ path('user_login') }}">{{ i18n.es.menus.new_user.login }}</a>
                        </li>
                    </ul>
                {% endif %}
                {% if app.session.get('user') %}
                    <ul class="user logged">
                        {% for option in app.session.get('menu') %}
                        <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                            <a href="{{ path(option.path) }}">{{ option.text }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                {% endif %}

                {% if not app.session.get('user') %}
                    <ul class="general">
                        <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                            <a href="{{ path('who_are_we') }}">{{ i18n.es.menus.new_user.who_we_are }}</a>
                        </li>
                        <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                            <a href="{{ path('protocol_public_redes') }}">{{ i18n.es.menus.new_user.protocols }}</a>

                            <!--
                            <ul class="protocols">
                                <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                                    <a href="{{ path('user_login') }}">{{ i18n.es.menus.new_user.protocol_uso_redes }}</a>
                                </li>
                                <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                                    <a href="{{ path('user_login') }}">{{ i18n.es.menus.new_user.protocol_uso_mensajeria }}</a>
                                </li>
                                <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                                    <a href="{{ path('user_login') }}">{{ i18n.es.menus.new_user.protocol_uso_telematica }}</a>
                                </li>
                            </ul>
                            -->
                        </li>
                        <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                            <a href="{{ path('blog') }}">{{ i18n.es.menus.new_user.news }}</a>
                        </li>
                        <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                            <a href="{{ path('contact') }}">{{ i18n.es.menus.new_user.contact }}</a>
                        </li>
                    </ul>
                {% endif %}

        </div><!-- .wrap -->

        </div><!-- .custom-header -->
        </header>

        {% block body %}
        {% endblock %}

        {% block javascripts %}
            {% javascripts '@AppBundle/Resources/public/js/*' filter='uglifyjs2' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}

            <script language="javascript">
                $(function() {
                    $('img.menubar').click(function() {
                        var header = $('#masthead');
                        if (header.hasClass('collapsed')) {
                            header.removeClass('collapsed');
                        } else {
                            header.addClass('collapsed');
                        }
                    });
                });
            </script>
        {% endblock %}

        <style>
            #footer {
                width: 100%;
                margin: 0;
                padding: 0;
                float: left;
                background-color: #eaeff2;
            }
            #newsletter {
                width: 50%;
                float: left;
                padding: 0 80px;
            }
            #newsletter > h1 {
                color: #939ab7;
                font-size: 24px;
            }
            #newsletter_form > div > label {
                display: none;
            }
            #newsletter_form > div {
                width: 60%;
                float: left;
            }
            #newsletter > form > input[type="submit"] {
                background-color: #9299b6;
                border-radius: 20px;
                height: 40px;
                width: 30%;
                margin-left: 10%;
                font-size: 16px;
                padding: 0;
                font-weight: 400;
            }
            #newsletter > p {
                color: #939ab7;
                margin-top: 20px;
                float: left;
                width: 60%;
                text-align: center;
                font-size: 12px;
            }
            #footer_footer {
                width: 50%;
                float: right;
                padding: 30px 80px;
                display: grid;
                grid-template-columns: auto auto;
                color: #939ab6;
                background-color: white;
            }
            #footer_footer > a {
                color: #939ab6;
                font-size: 16px;
            }
            #footer_footer > p {
                color: #939ab6;
                margin-top: 10px;
                margin-bottom: 0;
                font-size: 14px;
            }
            #footer_footer > p > a {
                color: #61ace3;
                font-size: 14px;
            }
            .first_column {
                grid-column: 1 / 2;
            }
            .two_columns {
                grid-column: 1 / 3;
            }

            @media (max-width: 480px) {
                #newsletter,
                #footer_footer {
                    width: 100%;
                    padding: 0 30px;
                    text-align: center;
                }
                #newsletter > h1 {
                    font-size: 16px;
                    font-weight: 600;
                }
                #newsletter > p {
                    color: #939ab7;
                    margin-top: 20px;
                    float: left;
                    width: 50%;
                    text-align: center;
                    font-size: 12px;
                    line-height: 20px;
                    font-weight: 400;
                    font-style: italic;
                    margin-bottom: 30px;
                }
                #newsletter_form > div {
                    width: 80%;
                    margin: 0 10%;
                }
                #newsletter > form > input[type="submit"] {
                    font-size: 14px;
                    width: auto;
                    margin-top: 30px;
                    float: right;
                    padding: 0 15px;
                }
                #footer_footer {
                    text-align: left;
                    padding-top: 20px;
                    padding-bottom: 30px;
                }
                #footer_footer > a {
                    font-size: 14px;
                    line-height: 24px;
                }
                #footer_footer > p,
                #footer_footer > p > a {
                    font-size: 11px;
                }
            }

        </style>

        <div id="footer">

            <div id="newsletter">
                <h1> Las noticias de Ammana en tu correo </h1>
                {{ form_start(newsletter_form) }}
                    {{ form_widget(newsletter_form) }}
                    <input type="submit" value="Subscribirme" />
                {{ form_end(newsletter_form) }}
                <p>
                    Al subscribirse está aceptando recibir correos
                    electrónicos comerciales de Ammana
                </p>
            </div>

            <div id="footer_footer">
                <a href="{{ path('who_are_we') }}">Quiénes somos</a>
                <a href="{{ path('info_legal') }}">Información legal</a>
                <a href="{{ path('protocol_public_redes') }}">Protocolos</a>
                <a href="{{ path('info_privacy') }}">Política de privacidad</a>
                <a href="{{ path('blog') }}">Blog</a>
                <a href="{{ path('info_cookies') }}">Política de cookies</a>
                <a class="first_column" href="{{ path('contact') }}">Contacto</a>
                <p class="two_columns">
                    Copyright &copy; 2017 - Todos los derechos reservados - ammana.es
                </p>
                <p class="two_columns">
                    Un producto de <a href="https://zeres.es/" target="_blank">Zeres Abogados</a>
                </p>
            </div>

        </div>

    </body>

</html>
