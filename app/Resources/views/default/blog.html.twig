    <style>
        #blog {
            display: grid;
            width: 100%;
            grid-template-columns: auto auto;
        }

        #blog article {
            border-bottom: 1px solid #c4c9cf;
            width: 100%;
            box-sizing: border-box;
            padding-bottom: 20px;
        }

        #blog article div {
            max-width: 489px;
        }

        #blog article:nth-child(odd) {
            border-right: 1px solid #c4c9cf;
        }

        #blog article:nth-child(odd) div {
            float: right;
            padding-right: 40px;
        }

        #blog article:nth-child(even) div {
            float: left;
            padding-left: 40px;
        }

        #blog h2 {
            color: #f08e51;
            text-transform: uppercase;
            font-size: 16px;
            margin: 0;
            padding: 30px 0px 0px 0px;
        }

        #blog h3 {
            color: #4f5877;
            margin: 0;
            padding: 0px 0px 0px 0px;
        }

        #blog h3 a {
            color: #4f5877;
            font-size: 28px;
            font-weight: 400;
            text-decoration: none;
        }

        #blog h3 a:hover {
            text-decoration: underline;
        }

        #blog span.date {
            color: #9299b6;
            margin-right: 10px;
        }

        #blog span.author {
            color: #4e9bd3;
            margin-left: 10px;
        }

        @media (max-width: 480px) {

            #blog {
                grid-template-columns: auto;
            }

            #blog article div,
            #blog article:nth-child(even) div,
            #blog article:nth-child(odd) div {
                max-width: 100%;
                padding-left: 20px;
                padding-right: 20px;
            }

            #blog article,
            #blog article:nth-child(even),
            #blog article:nth-child(odd) {
                border-right: none;
            }

        }

    </style>

