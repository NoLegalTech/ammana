        visibility:hidden;
        margin-right: 0;
    }
    #contact .right form .row div.form-buttons > div.left label,
    #contact .right form > div > div div.form-buttons > div.left label {
        cursor: pointer;
        font-size: 12px;
        width: auto;
        line-height: 20px;
    }
    #contact .right form .row div.form-buttons > div.left input[type=checkbox] + label:before,
    #contact .right form > div > div div.form-buttons > div.left input[type=checkbox] + label:before {
        border: 1px solid #979797;
        content: "\00a0";
        display: inline-block;
        font: 16px/1em sans-serif;
        height: 16px;
        margin: 0 8px 0 0;
        padding: 0;
        vertical-align: top;
        width: 16px;
    }
    #contact .right form .row div.form-buttons > div.left input[type="checkbox"]:checked + label:before,
    #contact .right form > div > div div.form-buttons > div.left input[type="checkbox"]:checked + label:before {
        color: #979797;
        content: "\2713";
        text-align: center;
    }
    #contact .right form .row div.form-buttons > div.left input[type="checkbox"]:checked + label:after,
    #contact .right form > div > div div.form-buttons > div.left input[type="checkbox"]:checked + label:after {
        font-weight: bold;
    }

    #contact .right form .row div.form-buttons > div.left input[type="checkbox"]:focus + label::before,
    #contact .right form > div > div div.form-buttons > div.left input[type="checkbox"]:focus + label::before {
        outline: #979797 auto 5px;
    }

    #contact .right form .row div.form-buttons > div.right input[type="submit"],
    #contact .right form > div > div div.form-buttons > div.right input[type="submit"] {
        background-color: #61ace3;
        border-radius: 15px;
        line-height: 4px;
        font-weight: 400;
        letter-spacing: 1px;
        float: right;
        margin-top: 10px;
    }
    #contact .right form .row div.form-buttons > div.right input[type="submit"]:disabled,
    #contact .right form > div > div div.form-buttons > div.right input[type="submit"]:disabled {
        background-color: #98a3ab;
        color: #3a3a3a;
        cursor: default;
    }

    #contact .right form .row div.form-buttons.legal-notice,
    #contact .right form > div > div div.form-buttons.legal-notice {
        height: 100px;
        padding-top: 10px;
        color: #979797;
        text-align: justify;
        line-height: 18px;
    }

